<div class="container">
    {{#if hasExpenses }}
    <h3>All Expenses</h3>
    <p>Download your expenses in .csv format</p>
    <button type="submit" class="btn btn-primary mb-3" onclick="redirectToPage('/expenses/download-expenses-csv')">Download</button>
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">Merchant</th>
                <th scope="col">Amount</th>
                <th scope="col">Currency</th>
                <th scope="col">Category</th>
                <th scope="col">Date/Time</th>

            </tr>
        </thead>
        <tbody>
            {{#each expenses}}
            <a href="/">
                <tr style="cursor:pointer;" onclick="redirectToPage('/expenses/all-expenses/{{this._id}}')">
                    <td>{{this.merchant}}</td>
                    <td>{{this.amount}}</td>
                    <td>{{this.userId.currency.code}}</td>
                    <td>{{this.category.name}}</td>
                    <td>{{this.createdAt}}</td>
                </tr>
            </a>
            {{/each}}
        </tbody>
    </table>
    {{ else }}
    <p>No expenses found.</p>
    {{/if}}
</div>
<script>
    function redirectToPage(page) {
        window.location.href = page;
    }
</script>