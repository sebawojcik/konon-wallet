<div class="container">
    {{#if hasExpenses }}
    <p>All Expenses</p>
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Merchant</th>
                <th scope="col">Amount</th>
                <th scope="col">Currency</th>
                <th scope="col">Date/Time</th>

            </tr>
        </thead>
        <tbody>
            {{#each expenses}}
            <a href="/">
                <tr style="cursor:pointer;" onclick="redirectToPage('/expenses/all-expenses/{{this._id}}')">
                    <td>{{this._id}}</td>
                    <td>{{this.merchant}}</td>
                    <td>{{this.amount}}</td>
                    <td>{{this.currency}}</td>
                    <td>{{this.createdAt}}</td>
                </tr>
            </a>
            {{/each}}
        </tbody>
    </table>
    {{ else }}
    <p>No expenses found.</p>
    {{/if}}
</div>
<script>
    function redirectToPage(page) {
        window.location.href = page;
    }
</script>